<% layout('/layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          name="campground[title]"
          id="title"
        />
      </div>

      <div class="mb-3">
        <label class="form-label" for="title">Location</label>
        <input
          class="form-control"
          type="text"
          name="campground[location]"
          id="location"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input
          class="form-control"
          type="text"
          name="campground[image]"
          id="image"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price" id="price-label"
          >Campground Price</label
        >
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text" id="price">$</span>
          </div>
          <input
            type="text"
            class="form-control"
            placeholder="0.00"
            aria-label="price-label"
            aria-describedby="price-label"
            name="campground[description]"
          />
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          name="campground[description]"
          id="description"
        ></textarea>
      </div>

      <div class="mb-3">
        <button class="btn btn-success">Add Campground</button>
      </div>
    </form>
    <a href="/campgrounds">All Campgrounds</a>
  </div>
</div>
